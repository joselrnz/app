{
  "name": "jose-cloud-portfolio",
  "version": "1.2.0",
  "private": true,
  "description": "Jose's Professional Cloud Engineering Portfolio - Modern CI/CD showcase with interactive pipeline visualization and multi-cloud infrastructure",
  "author": {
    "name": "Jose Rodriguez",
    "email": "jose@joselrnz.com",
    "url": "https://joselrnz.com"
  },
  "keywords": [
    "cloud-engineering",
    "devops",
    "portfolio",
    "cicd",
    "kubernetes",
    "terraform",
    "aws",
    "azure",
    "gcp",
    "nextjs",
    "typescript",
    "tailwindcss"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/joselrnz/portfolio.git"
  },
  "homepage": "https://joselrnz.com",
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev -p 3002",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:analyze": "ANALYZE=true npm run build",
    "start": "next start",
    "start:prod": "NODE_ENV=production npm run start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "next lint --max-warnings 0",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf .next out dist",
    "clean:deps": "rm -rf node_modules package-lock.json && npm install",
    "audit:fix": "npm audit fix",
    "audit:check": "npm audit --audit-level=moderate",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "precommit": "npm run lint:strict && npm run type-check && npm run format:check",
    "prebuild": "npm run clean && npm run type-check",
    "create-article": "node ../scripts/create-article.js",
    "quick-article": "node ../scripts/quick-article.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.24.0",
    "@heroicons/react": "^2.0.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-three/drei": "^10.4.2",
    "@react-three/fiber": "^9.1.4",
    "@types/dompurify": "^3.0.5",
    "@types/js-yaml": "^4.0.9",
    "chart.js": "^4.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.0",
    "framer-motion": "^11.0.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "katex": "^0.16.25",
    "lucide-react": "^0.553.0",
    "next": "^14.2.28",
    "next-mdx-remote": "^5.0.0",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-prism-plus": "^2.0.1",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "server-only": "^0.0.1",
    "tailwind-merge": "^2.6.0",
    "three": "^0.170.0",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.28",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/node": "22.16.0",
    "@types/react": "18.3.23",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.28",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.15",
    "typescript": "5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
